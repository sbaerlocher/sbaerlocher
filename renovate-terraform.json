{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sbaerlocher/sbaerlocher:renovate-base"],
  "enabledManagers": ["terraform", "github-actions", "custom.regex"],
  "packageRules": [
    {
      "description": "Group Terraform Providers",
      "matchManagers": ["terraform"],
      "matchDatasources": ["terraform-provider"],
      "groupName": "terraform-providers"
    },
    {
      "description": "Terraform Major manual",
      "matchManagers": ["terraform"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions with renovate comments",
      "managerFilePatterns": ["/.*\\.ya?ml$/", "/.*\\.json$/", "/Makefile$/", "/.*\\.mk$/"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)(\\s+versioning=(?<versioning>[^\\s]+))?\\s*\\n[^:]*:\\s*['\"]?(?<currentValue>[^'\"\\s]+)['\"]?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
